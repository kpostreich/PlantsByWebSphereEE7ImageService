#FROM ibmcom/websphere-liberty:webProfile7-ubi-min-amd64

FROM ibmcom/websphere-liberty:javaee7-ubi-min-amd64

COPY . /project
WORKDIR /project

ARG SSL=true

ARG MP_MONITORING=true
ARG HTTP_ENDPOINT=false

RUN mkdir -p /opt/ibm/wlp/usr/shared/config/lib/global
RUN chown 1001:0 /opt/ibm/wlp/usr/shared/config/lib/global
RUN chown 1001:0 /config


RUN cp ./src/main/liberty/config/server.xml /config/
RUN cp ./target/*.*ar /config/apps/
RUN cp ./src/main/liberty/lib/* /opt/ibm/wlp/usr/shared/config/lib/global


USER root
RUN configure.sh
USER 1001

# Upgrade to production license if URL to JAR provided
ARG LICENSE_JAR_URL
RUN \
   if [ $LICENSE_JAR_URL ]; then \
     wget $LICENSE_JAR_URL -O /tmp/license.jar \
     && java -jar /tmp/license.jar -acceptLicense /opt/ibm \
     && rm /tmp/license.jar; \
   fi

